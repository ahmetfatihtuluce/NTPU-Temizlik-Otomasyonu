<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Uygulama.HizmetlerController">
   <children>
      <TableView fx:id="tbl_tablo" onMouseClicked="#tbl_tablo_click" prefHeight="200.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="col_ID" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="col_Ad" prefWidth="75.0" text="Ad" />
            <TableColumn fx:id="col_Tur" prefWidth="75.0" text="Tür" />
            <TableColumn fx:id="col_Tel" prefWidth="75.0" text="Tel" />
            <TableColumn fx:id="col_Adres" prefWidth="75.0" text="Adres" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="btn_sil" layoutX="14.0" layoutY="326.0" mnemonicParsing="false" onAction="#btn_sil_click" prefHeight="50.0" prefWidth="100.0" text="Sil" />
      <Button fx:id="btn_geri" layoutX="286.0" layoutY="326.0" mnemonicParsing="false" onAction="#btn_geri_click" prefHeight="50.0" prefWidth="100.0" text="Geri" />
      <Label fx:id="lbl_sil" layoutX="28.0" layoutY="293.0" text="Seçili Satırı Sil" />
   </children>
</AnchorPane>
